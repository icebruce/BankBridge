{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/main/**/*.ts",
    "src/services/storageLocation.ts",
    "src/models/Settings.ts",
    "src/models/MasterData.ts"
  ],
  "exclude": ["node_modules"]
} 